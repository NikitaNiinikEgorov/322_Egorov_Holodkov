<Window x:Class="_322_Egorov_Holodkov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 1" Height="350" Width="400">
    <Grid Margin="10">
        <Image Source="function.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="350" />
        <Label Content="x:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" />
        <TextBox x:Name="InputX" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="30,60,0,0" />
        <Label Content="y:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" />
        <TextBox x:Name="InputM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="30,100,0,0" />
        <Label Content="Ответ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0" />
        <TextBox x:Name="OutputResult" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="60,140,0,0" IsReadOnly="True" />
        <GroupBox Header="f(x)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,60,0,0" Width="150">
            <StackPanel>
                <RadioButton x:Name="RadioSh" Content="sh(x)" />
                <RadioButton x:Name="RadioX2" Content="x²" />
                <RadioButton x:Name="RadioExp" Content="eˣ" />
            </StackPanel>
        </GroupBox>
        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,200,0,0" Click="CalculateButton_Click" />
        <Button Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,200,0,0" Click="ClearButton_Click" />
    </Grid>
</Window>